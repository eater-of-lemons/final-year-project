{
  "manifest_version": 3,
  "name": "Instagram Reels Sentiment Analyzer",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "*://*.instagram.com/*",
    "http://localhost:5050/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/hello.html",
    "default_icon": {
      "16": "icons/pos.png"
    }
  },
  "content_scripts": [{
    "matches": ["*://*.instagram.com/*"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["icons/pos.png"],
    "matches": ["<all_urls>"]
  }]
}